@model IEnumerable<Teacher>

<h2>Teachers</h2>
<a class="btn btn-primary" asp-area="" asp-controller="Teacher" asp-action="Create">Add Teacher</a>
<hr>
<table class="table table-bordered">
    <thead> 
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.SurName)</th>
            <th style="width: 150px;"></th>
        </tr>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.SurName)</td>
                    <td>
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </thead>
</table>
